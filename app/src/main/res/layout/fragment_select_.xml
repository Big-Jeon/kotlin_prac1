<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Select_Fragment"
    android:background="@drawable/selection"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/Select_1"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selection"
        android:gravity="center"
        android:hint="결과1"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"></TextView>

    <TextView
        android:layout_below="@+id/Select_1"
        android:id="@+id/Select_2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selection"
        android:gravity="center"
        android:hint="결과2"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"></TextView>
    <TextView
        android:layout_below="@+id/Select_2"
        android:id="@+id/Select_3"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selection"
        android:gravity="center"
        android:hint="결과3"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"></TextView>
    <TextView
        android:layout_below="@+id/Select_3"
        android:id="@+id/Select_4"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selection"
        android:gravity="center"
        android:hint="결과4"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"></TextView>
    <Button
        android:id="@+id/previous_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/previous" />

</RelativeLayout>